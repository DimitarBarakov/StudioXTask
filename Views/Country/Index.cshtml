@model List<Country>
<h2>Списък с държави</h2>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Име на държава</th>
            <th>Брой градове</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var c in Model)
        {
            <tr>
                <td>
                    <div class="d-flex justify-content-between align-items-center">
                        @c.Name
                        @{
                            if (User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="Country" asp-action="Edit" asp-route-id="@c.Id" class="btn btn-danger">Edit</a>                                
                            }
                        }
                        
                    </div>
                </td>
                <td>
                    @c.Cities.Count()
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    if (User.Identity.IsAuthenticated)
    {
        <div class="container button-add">
            <a asp-controller="Country" asp-action="Add" class="btn btn-danger btn-lg float-right">Add Country</a>
        </div>
    }
}
