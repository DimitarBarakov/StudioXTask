@using StudioXFirstTask.ViewModels.City
@model CityFormViewModel

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.CountryId" class="form-label">Select country</label>
        <select asp-for="@Model.CountryId" class="form-control">
            @foreach (var country in @Model.Countries)
            {
                <option value="@country.Id">@country.Name</option>
            }
        </select>
        <span asp-validation-for="@Model.CountryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
</form>
